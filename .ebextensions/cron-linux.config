files:
    "/etc/cron.d/mycron":
        mode: "000644"
        owner: root
        group: root
        content: |
            * * * * * curl https://devbackend.ifasonline.com/v1/admin/teachers/cron/update-premier-status >> /home/ec2-user/log.txt
            * * * * * echo "suraj" >> /home/ec2-user/log.txt 
            

    "/usr/local/bin/myscript.sh":
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash

            date > /tmp/date
            # Your actual script content

            exit 0

commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/mycron.bak"
   
